{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "nursery": {
        "noBitwiseOperators": "off"
      }
    }
  },
  "extends": ["ultracite"]
}
